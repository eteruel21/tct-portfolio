    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "serve": "^14.2.0",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.4.14",
    "vite": "^7.1.7"
  }
